<h1 style="color:#c45d5d;margin:0 auto">all items</h1>

<% @items.each do |item| %>
  <ul>
    <li><%= link_to item.name, item_path(item) %></li>
    <li><%= item.price %></li>
    <li><%= item.description %></li>
    <li><%= button_to 'delete', item_path(item), method: :delete %></li>
  </ul>
<% end %>
