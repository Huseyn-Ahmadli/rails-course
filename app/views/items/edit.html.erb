<h1 style="color:#c45d5d;margin:0 auto">Edit item</h1>

<%= form_tag item_path(@item), method: :put do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, @item.name %>
  <%= label_tag :price %>
  <%= number_field_tag :price, @item.price , min:0 %>
  <%= submit_tag "Update",class: "btn btn-large btn-primary"%>
<% end %>

